<%= render "layouts/navbar" %>
<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.role %>.
    <%= link_to "Log out", log_out_path %>
  <% end %>
</div>
<div class="pagetitle">
  /<%= @board.abbreviation %>/ &ndash; <%= @board.title %>
  <small>
    <% if params[:action] == 'show' %>
      [<%= link_to "Catalog", 'catalog/'+@board.abbreviation, {:title => @board.title} %>]
    <% else %>
      [<%= link_to "Board", '/'+@board.abbreviation, {:title => @board.title} %>]
    <% end %>
  </small>
  <hr />
</div>