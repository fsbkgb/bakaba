<% cache 'full-thread_'+@post.slug do %>
  <%= render "layouts/post", :target => @post, :reflink_pfx => "", :oppost => true, :catalogue => false %>
  <% if @comments.size > 0  %>
    <% @comments.each do |comment| %>
      <table class="reply" id="reply_<%= comment.number %>">
        <tr>
          <td>
            <%= render "layouts/post", :target => comment, :reflink_pfx => "", :post_slug => @post.slug, :oppost => false, :catalogue => false %>
          </td>
        </tr>
      </table>
    <% end %>
  <% end %>
<% end %>
<div id="pop-up"></div>