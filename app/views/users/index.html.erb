<p id="notice"><%= notice %></p>
<% if User.all.size > 0 %>
<h1>Listing Users</h1>
  <table class="pure-table">
   <thead>
    <tr>
      <th>Login</th>
      <th>Role</th>
      <th>Password</th>
      <th>Action</th>
    </tr>
   </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.role %></td>
      <td><%= user.password %></td>
      <td>[ <%= link_to 'Del', user, :confirm => 'Are you sure?', :method => :delete %> ]</td>
    </tr>
  <% end %>
  </table>
  <br />
<% end %>
[ <%= link_to 'New User', new_user_path %> ]
